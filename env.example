# Пример переменных окружения для Target Assistant Bot

# Telegram Bot token, выданный BotFather
TELEGRAM_BOT_TOKEN=your-bot-token-here

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Путь к JSON сервисного аккаунта Google
GOOGLE_CREDENTIALS_PATH=/opt/target-assistant-bot/google_credentials.json

# Часовой пояс (tz database name)
SCHEDULER_TIMEZONE=Europe/Moscow

# Время напоминаний
MORNING_REMINDER_TIME=09:00
EVENING_REMINDER_TIME=21:00

# Интервал мотивационных сообщений (часы)
MOTIVATION_INTERVAL_HOURS=3

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=WARNING

# Prometheus metrics port (default: 8000)
PROMETHEUS_PORT=8000

# Sentry DSN
SENTRY_DSN=
# Опционально: уровень логирования событий, процент трассировок
SENTRY_LOG_LEVEL=ERROR
SENTRY_TRACES_SAMPLE_RATE=0.1 